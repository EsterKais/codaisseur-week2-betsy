    <div class="filteritem">
      <%= link_to "Edibles", edible_pages_path %>
    </div>
    <div class="filteritem">
      <%= link_to "Races", race_pages_path %>
    </div>
    <div class="filteritem">
      <%= link_to "All", root_path %>
    </div>
  </div>

  <div class="originfilters">
    <p> Filter by Origin: </p>
    <div class="originfilter">
      <%= link_to "Europe", europe_pages_path %>
    </div>
    <div class="originfilter">
      <%= link_to "North-America", north_america_pages_path %>
    </div>
    <div class="originfilter">
      <%= link_to "Asia", asia_pages_path %>
